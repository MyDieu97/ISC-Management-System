
@{
	ViewBag.Title = "Trainings";
}

<h2>Specialized Trainings</h2>
<script src="~/Content/admin-lte/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
<div class="box box-info">
	<div class="box-header with-border">
		<h3 class="box-title">Create</h3>
	</div>
	<!-- /.box-header -->
	<!-- form start -->
	<form>
		<div class="container">
			<div class="box-body">
				<div class="row">
					<div class="col-md-6 col-sm-12">
						<input id="id" hidden />
						<div class="row">
							<div class="form-group col-12">
								<label for="lastName" class="col-sm-2 col control-label">Name</label>

								<div class="col-8">
									<input type="text" class="form-control" id="txtName" placeholder="Type training's name here ...">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="form-group col-12">
								<label for="gender" class="col-sm-2 col control-label">Duration </label>

								<div class="col-8">
									<input type="number" class="form-control col-xs-6" id="txtNumber" style="border: 1px solid #ccc; width: 30%">
									<span class="col" style="margin-left: 0.75em">week(s)</span>
								</div>
							</div>
						</div>
						<div class="row" style="margin-top: 8rem;">
							<div class="col-12">
								<label>LIST OF SUBJECTS SELECTED</label>
								<table id="subjectsSelectedTable" class="table table-bordered">
									<thead>
										<tr>
											<th>
												@Html.Label("#")
											</th>
											<th>
												@Html.Label("ID")
											</th>
											<th>
												@Html.Label("Name")
											</th>
											<th>
												@Html.Label("Number of Lessions")
											</th>
											<th>

											</th>
										</tr>
									</thead>
									<tbody id="dataSubjectsSelectedTable">
										<tr>
											<td>1</td>
											<td>ABC001</td>
											<td>Front-end</td>
											<td>60</td>
											<td class="text-center">
												<button class="far fa-trash-alt btn btn-danger" type="button"></button>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<div class="col-md-6 col-sm-12">
						<label>LIST OF SUBJECTS</label>
						<table id="subjectsTable" class="table table-bordered table-hover">
							<thead>
							<thead>
								<tr>
									<th>
										@Html.Label("#")
									</th>
									<th>
										@Html.Label("ID")
									</th>
									<th>
										@Html.Label("Name")
									</th>
									<th>
										@Html.Label("Number of Lessions")
									</th>
								</tr>
							</thead>
							<tbody id="dataSubjectsTable">
								<tr>
									<td>1</td>
									<td>ABC001</td>
									<td>Front-end</td>
									<td>60</td>
								</tr>
								<tr>
									<td>2</td>
									<td>ABC002</td>
									<td>Back-end</td>
									<td>60</td>
								</tr>
								<tr>
									<td>2</td>
									<td>ABC002</td>
									<td>Back-end</td>
									<td>60</td>
								</tr>
								<tr>
									<td>2</td>
									<td>ABC002</td>
									<td>Back-end</td>
									<td>60</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<!-- /.box-body -->
		<div class="box-footer">
			<div class="container">
				<div class="row">
					<div class="col-sm-2">
						<button type="submit" class="btn btn-default" id="btnClear">Clear</button>
					</div>
					<div class="col-sm-10">
						<button type="submit" class="btn btn-success" id="btnSave">Save</button>
					</div>
				</div>
			</div>
		</div>
		<!-- /.box-footer -->
	</form>
</div>
	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">Traninings Data Table</h3>
					</div>
