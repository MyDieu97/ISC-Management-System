
@{
    ViewBag.Title = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>University</h2>

<script src="~/Content/admin-lte/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Create new subject</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form>
        <div class="container">
            <div class="box-body">
                <input id="id" hidden />
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group col-md-12 col-md-12">
                            <label for="txtSubjectName" class="col-sm-2 col-md-3 col control-label">Subject Name</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="txtSubjectName" placeholder="">
                            </div>
                        </div>
                    </div>
                    <!-- /.col-md-6 -->
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group col-md-12 col-md-12">
                            <label for="txtNumberLesson" class="col-sm-2 col-md-3 col control-label">Number Lesson</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="txtNumberLesson" placeholder="">
                            </div>
                        </div>
                    </div>
                    <!-- /.col-md-6 -->
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="row justify-content-around">
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-default" id="btnClear">Delete</button>
                    </div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-success" id="btnSave">Save</button>
                    </div>
                </div>
            </div>
            <!-- /.box-footer -->
        </div>
    </form>
</div>
<!-- /.box -->
<div class="container">
    <div class="row mt-2">
        <table class="table">
            <tr>
                <th>
                    @Html.Label("No")
                </th>
                <th>
                    @Html.Label("Subject Name")
                </th>
                <th>
                    @Html.Label("Number Lesson")
                </th>                
            </tr>
            <tbody id="dataTable"></tbody>
        </table>
    </div>
</div>
