
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/admin-lte/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Create new student</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->

    <form>
        <div class="container">
            <div class="box-body">
                <input id="id" hidden />
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group col-md-12">
                            <label for="txtLastName" class="col-sm-2 col-md-3 col control-label">Last Name</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="txtLastName" placeholder="">
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="txtFirstName" class="col-sm-2 col-md-3 col control-label">First Name</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="txtFirstName" placeholder="">
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="gender" class="col-sm-2 col-md-3 col control-label">Gender</label>

                            <div class="col-sm-9">
                                <input type="radio" name="gender" value="male" checked> Male
                                <input type="radio" name="gender" value="female"> Female
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="datepicker" class="col-sm-2 col-md-3 control-label">Date of birth</label>

                            <div class="col-sm-9">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="date" class="form-control pull-left" id="dtpDateofBirth" style="width:242px">
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="txtAddress" class="col-sm-2 col-md-3 control-label">Address</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="txtAddress" placeholder="">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6">

                        <div class="form-group col-md-12">
                            <label for="txtEmail" class="col-sm-2 col-md-3 control-label">Email</label>

                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="txtEmail" placeholder="">
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="txtPhone" class="col-sm-2 col-md-3 control-label">Phone</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="txtPhone" placeholder="">
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="drdownUniversity" class="col-sm-2 col-md-3 control-label">University</label>

                            <div class="col-sm-9">
                                <select class="form-control" id="drdownUniversity"></select>
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="drnMajor" class="col-sm-2 col-md-3 control-label">Major</label>

                            <div class="col-sm-9">
                                <select class="form-control" id="drnMajor"></select>
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="dtpReadyDate" class="col-sm-2 col-md-3 control-label">Ready Date</label>

                            <div class="col-sm-9">
                                <input type="date" class="form-control" id="dtpReadyDate">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6">
                        <div class="form-group col-md-12">
                            <label for="rbtnDeposit" class="col-sm-2 col-md-3 control-label">Deposit</label>

                            <div class="col-sm-9">
                                <input type="radio" id="rbtnDeposit" value="yes">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6">
                        <div class="form-group col-md-12">
                            <label for="rbtnCertification" class="col-sm-2 col-md-3 control-label">Certification</label>

                            <div class="col-sm-9">
                                <input type="radio" id="rbtnCertification" value="yes" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="row justify-content-around">
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-default" id="btnClear">Delete</button>
                    </div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-success" id="btnSave">Save</button>
                    </div>
                </div>
            </div>
            <!-- /.box-footer -->
        </div>
    </form>


    <!-- /.box -->
    <div class="container">
        <div class="row mt-2">
            <table class="table">
                <tr>
                    <th>
                        @Html.Label("No")
                    </th>
                    <th>
                        @Html.Label("Last Name")
                    </th>
                    <th>
                        @Html.Label("First Name")
                    </th>
                    <th>
                        @Html.Label("Gender")
                    </th>
                    <th>
                        @Html.Label("Date of Birth")
                    </th>
                    <th>
                        @Html.Label("University")
                    </th>
                    <th>
                        @Html.Label("Address")
                    </th>
                    <th>
                        @Html.Label("Email")
                    </th>
                    <th>
                        @Html.Label("Phone")
                    </th>
                    <th>

                    </th>
                </tr>
                <tbody id="dataTable"></tbody>
            </table>
        </div>
    </div>
</div>

